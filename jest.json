{
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx"],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.ts", 
    "!src/__tests__/**", 
    "!**/types/**", 
    "!**/node_modules/**"],
  "coverageReporters": ["text", "lcov", "json"],
  "coverageDirectory": "./coverage",
  "transform": {
    "\\.jsx?$": "babel-jest",
    "\\.tsx?$": "ts-jest"
  },
  "roots": ["<rootDir>/src"],
  "testMatch": ["**/__tests__/**/*.test.*"],
  "globals": {
    "ts-jest": {
      "tsconfig": "./tsconfig.json"
    }
  },
  "testEnvironment": "node",
  "automock": false
}
