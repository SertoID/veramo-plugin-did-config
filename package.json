{
  "name": "veramo-plugin-did-config",
  "description": "veramo plugin that generates DID configuration files to be used in the DIF Well Known DID Configuration standard: https://identity.foundation/.well-known/resources/did-configuration/",
  "version": "1.0.6",
  "source": "src/index.ts",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "veramo": {
    "pluginInterfaces": {
      "IWellKnownDidConfigurationPlugin": "./src/types/IWellKnownDidConfigurationPlugin.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "generate-plugin-schema": "yarn veramo dev generate-plugin-schema",
    "start": "veramo server",
    "verify": "veramo execute -m verifyWellKnownDidConfiguration -a \"{\\\"domain\\\": \\\"identity.foundation\\\"}\"",
    "watch": "tsc -b --watch",
    "test": "jest",
    "test-ci": "jest --coverage=true --maxWorkers 2",
    "clean": "rm -rf tmp && rm database.sqlite && rm -rf build && rm tsconfig.tsbuildinfo",
    "upgrade-veramo": "yarn add -D @veramo/cli && yarn add @veramo/core @veramo/message-handler @veramo/did-resolver @veramo/credential-w3c @veramo/did-jwt @veramo/data-store did-resolver @veramo/key-manager @veramo/kms-local"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@veramo/cli": "^1.1.0",
    "@veramo/did-manager": "^1.1.0",
    "codecov": "^3.8.1",
    "commitlint": "^11.0.0",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "ts-jest": "^26.5.0",
    "typescript": "4.1.3"
  },
  "files": [
    "build/**/*",
    "src/**/*",
    "README.md",
    "plugin.schema.json",
    "LICENSE"
  ],
  "dependencies": {
    "@types/node-fetch": "^2.5.8",
    "@veramo/core": "^1.1.0",
    "@veramo/credential-w3c": "^1.1.0",
    "@veramo/data-store": "^1.1.0",
    "@veramo/did-jwt": "^1.1.0",
    "@veramo/did-provider-ethr": "^1.1.1-next.10",
    "@veramo/did-provider-key": "^1.1.1-next.10",
    "@veramo/did-provider-web": "^1.1.1-next.10",
    "@veramo/did-resolver": "^1.1.0",
    "@veramo/key-manager": "^1.1.0",
    "@veramo/kms-local": "^1.1.0",
    "@veramo/message-handler": "^1.1.0",
    "did-resolver": "^2.2.0",
    "node-fetch": "^2.6.1",
    "vc-js": "https://github.com/digitalbazaar/vc-js"
  }
}
